<Window x:Class="TouchChanX.Ava.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menu="using:TouchChanX.Ava.Menu"
    xmlns:touch="using:TouchChanX.Ava.Touch"
    Title="TouchChanX.Rider"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Panel>
        <Border x:Name="BackgroundLayer" Background="Transparent" />
        <touch:TouchControl x:Name="Touch" x:FieldModifier="public" IsVisible="{Binding !#Menu.IsVisible}" />
        <menu:MenuControl x:Name="Menu" />
    </Panel>
</Window>
