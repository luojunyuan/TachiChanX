<UserControl x:Class="TouchChanX.Ava.Menu.Pages.MainPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:TouchChanX.Ava.Menu.Pages.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="MainPageGrid" ColumnDefinitions="*, *, *" RowDefinitions="*, *, *">
        <c:MenuButton
            Grid.Row="0"
            Grid.Column="1"
            Symbol="Tablet"
            Tag="Device"
            Text="Device" />

        <c:MenuButton
            Grid.Row="1"
            Grid.Column="0"
            Symbol="Games"
            Tag="Game"
            Text="Game" />
    </Grid>
</UserControl>
