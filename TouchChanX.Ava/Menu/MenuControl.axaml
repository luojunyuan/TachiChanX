<UserControl x:Class="TouchChanX.Ava.Menu.MenuControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menu="using:TouchChanX.Ava.Menu"
    xmlns:pages="clr-namespace:TouchChanX.Ava.Menu.Pages"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AssistiveTouchBackground" Color="#262626" />
    </UserControl.Resources>

    <Border x:Name="Menu"
        Width="300"
        Height="{Binding $self.Width}"
        Padding="12"
        Background="{StaticResource AssistiveTouchBackground}"
        CornerRadius="40">

        <Panel x:Name="PagePanel">
            <pages:MainPage x:Name="MainPage" />

            <ContentControl x:Name="InnerPageHost" />
        </Panel>

    </Border>
</UserControl>
