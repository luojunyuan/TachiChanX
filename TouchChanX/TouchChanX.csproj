<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <DevMode Condition="'$(DevMode)' == ''">false</DevMode>
    <DefineConstants Condition="'$(DevMode)' == 'true'">$(DefineConstants);DevMode</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\TouchChanX.Ava\TouchChanX.Ava.csproj" />
    <ProjectReference Include="..\TouchChanX.Win32\TouchChanX.Win32.csproj" />
    <PackageReference Condition="'$(DevMode)' == 'true'" Include="AvaloniaUI.DiagnosticsSupport" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="EmbeddedResource.resx">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>

</Project>
