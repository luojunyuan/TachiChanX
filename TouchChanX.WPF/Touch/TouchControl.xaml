<UserControl x:Class="TouchChanX.WPF.Touch.TouchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:control="clr-namespace:TouchChanX.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TouchChanX.WPF.Touch"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:TouchChanX.WPF"
    mc:Ignorable="d">

    <Border x:Name="Touch"
        Width="80"
        Height="{Binding ActualWidth, ElementName=Touch}"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Background="{StaticResource AssistiveTouchBackground}"
        CornerRadius="{c:Binding ActualWidth / 2, ElementName=Touch}">

        <control:TouchComposite />

        <Border.RenderTransform>
            <TranslateTransform x:Name="MoveTransform" />
        </Border.RenderTransform>
    </Border>
</UserControl>
