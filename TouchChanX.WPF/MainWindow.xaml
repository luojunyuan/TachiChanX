<Window x:Class="TouchChanX.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menu="clr-namespace:TouchChanX.WPF.Menu"
    xmlns:touch="clr-namespace:TouchChanX.WPF.Touch"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="touch:TouchControl">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMenuOpen.Value}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMenuOpen.Value}" Value="False">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="menu:MenuControl">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMenuOpen.Value}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMenuOpen.Value}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <touch:TouchControl x:Name="Touch" />
        <menu:MenuControl x:Name="Menu" />
    </Grid>
</Window>
