<Grid x:Class="TouchChanX.WPF.Controls.TouchComposite" x:Name="PART_Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="clr-namespace:TouchChanX.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TouchChanX.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:TouchChanX.WPF"
    d:Height="80"
    d:Width="80"
    mc:Ignorable="d">

    <Grid.Resources>
        <SolidColorBrush x:Key="AssistiveTouchLayerOneLine" Color="#232323" />
        <SolidColorBrush x:Key="AssistiveTouchLayerOneBackground" Color="#505050" />
        <SolidColorBrush x:Key="AssistiveTouchLayerTwoLine" Color="#434343" />
        <SolidColorBrush x:Key="AssistiveTouchLayerTwoBackground" Color="#939393" />
        <SolidColorBrush x:Key="AssistiveTouchLayerThreeLine" Color="#686868" />
        <SolidColorBrush x:Key="AssistiveTouchLayerThreeBackground" Color="#FFFFFF" />
    </Grid.Resources>

    <Ellipse
        Margin="{Binding ActualWidth, ElementName=PART_Root, Converter={cvt:TouchLayerMarginConverter Numerator=2, Denominator=16}}"
        Fill="{StaticResource AssistiveTouchLayerOneBackground}"
        Stroke="{StaticResource AssistiveTouchLayerOneLine}"
        StrokeThickness="{x:Static root:Shared.AssistiveTouchCircleThickness}" />

    <Ellipse
        Margin="{Binding ActualWidth, ElementName=PART_Root, Converter={cvt:TouchLayerMarginConverter Numerator=3, Denominator=16}}"
        Fill="{StaticResource AssistiveTouchLayerTwoBackground}"
        Stroke="{StaticResource AssistiveTouchLayerTwoLine}"
        StrokeThickness="{x:Static root:Shared.AssistiveTouchCircleThickness}" />

    <Ellipse
        Margin="{Binding ActualWidth, ElementName=PART_Root, Converter={cvt:TouchLayerMarginConverter Numerator=4, Denominator=16}}"
        Fill="{StaticResource AssistiveTouchLayerThreeBackground}"
        Stroke="{StaticResource AssistiveTouchLayerThreeLine}"
        StrokeThickness="{x:Static root:Shared.AssistiveTouchCircleThickness}" />
</Grid>
