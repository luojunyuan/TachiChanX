<UserControl x:Class="TouchChanX.WPF.Controls.MenuButton" x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
    xmlns:local="clr-namespace:TouchChanX.WPF.Controls"
    d:DataContext="{d:DesignInstance Type=local:MenuButton}"
    d:DesignHeight="80"
    d:DesignWidth="80"
    Foreground="White"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <ic:SymbolIcon FontSize="38" Symbol="{Binding Symbol, ElementName=Root}" />
        <TextBlock HorizontalAlignment="Center" Text="{Binding Text, ElementName=Root}" />
    </StackPanel>
</UserControl>
